<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs')  %>
        <div class="blogs">
            <h2>All Blogs</h2>
            <% if (blogs.length >0){%>
                <%blogs.forEach((blog)=>{ %>
                    <a class="'single" href="/blogs/<%= blog._id %>">
                        <h3 class="title"><%= blog.title%></h3>
                        <p class="snippet"><%= blog.snippet %></p>
                    </a>
                <% }) %>
                
                
            <%}else {%>
                <h3>No blogs to Display</h3> 
            <%}%>
                
        </div>
    </body>
</html>